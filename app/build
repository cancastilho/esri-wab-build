#!/usr/bin/env node

const buildTool = require('./buildTool');
const remoteBuild = require('./remoteBuild');
const file = require('./file');
const paths = require('./paths');
const args = require('process').argv;

//TODO use commander.js to parse options.
if (args.length > 2) {
    const buildPath = args[2];
    remoteBuild.buildApp(buildPath);
} else {
    buildTool.build();
}

//TODO make zip optional
file.createZipFromTo(paths.appOutput, paths.outputZip);